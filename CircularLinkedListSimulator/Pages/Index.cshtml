@page
@model CircularLinkedListSimulator.Pages.IndexModel
@{
    ViewData["Title"] = "Circular Linked List Simulator";
}

<link rel="stylesheet" href="~/css/site.css" />
<script src="~/js/simulator.js"></script>

<div class="container">
    <h1>Circular Linked List Simulator</h1>

    <div class="panel">
        <div class="form-section">
            <label for="operation">Operation</label>
            <select id="operation" onchange="onOperationChange()">
                <option value="">-- Select --</option>
                <option value="insert">Insert</option>
                <option value="delete">Delete</option>
                <option value="utilities">Utilities</option>
            </select>

            <div id="subOperations">
                <!-- Sub-operations dynamically rendered here -->
            </div>
        </div>

        <div class="input-section">
            <label>Data</label>
            <input type="text" id="dataInput" placeholder="Node Data" disabled />

            <label>Index (0 based)</label>
            <input type="number" id="indexInput" placeholder="0" disabled />

            <button id="executeBtn" onclick="onExecute()" disabled>
                EXECUTE <span>&#9654;</span>
            </button>
        </div>
    </div>

    <div class="visualization" id="listVisualization">
        <!-- Nodes will appear here dynamically -->
    </div>
</div>

@page
@model IndexModel
@{
    ViewData["Title"] = "Linked List Visualizer";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Linked List Visualizer</h1>

    <div class="row">
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0">List Type</h5>
                </div>
                <div class="card-body">
                    <select class="form-select" id="listTypeSelect">
                        <option value="singly">Singly Linked List</option>
                        <option value="doubly">Doubly Linked List</option>
                        <option value="circular" selected>Circular Linked List</option>
                    </select>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Operations</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <select class="form-select" id="operationSelect">
                            <option value="">Select operation</option>
                            <option value="insert">Insert</option>
                            <option value="delete">Delete</option>
                            <option value="utilities">Utilities</option>
                        </select>
                    </div>

                    <div class="mb-3" id="subOperationGroup" style="display: none;">
                        <select class="form-select" id="subOperationSelect">
                            <option value="">Select sub-operation</option>
                        </select>
                    </div>

                    <div class="mb-3" id="dataGroup" style="display: none;">
                        <input type="text" class="form-control" id="dataInput" placeholder="Enter data">
                    </div>

                    <div class="mb-3" id="indexGroup" style="display: none;">
                        <input type="number" class="form-control" id="indexInput" placeholder="Enter index" min="0">
                    </div>

                    <div class="buttons-container">
                        <button id="executeBtn" class="btn btn-success" disabled>
                            <i class="bi bi-play-fill"></i> Execute
                        </button>
                        <button id="clearBtn" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Clear
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Visualization</h5>
                    <span class="badge bg-dark node-counter">
                        Nodes: <span id="nodeCount">0</span>
                    </span>
                </div>
                <div class="card-body p-0">
                    <div id="linkedListContainer"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
}
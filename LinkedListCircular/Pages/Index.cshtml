@page
@model IndexModel
@{
    ViewData["Title"] = "Circular Linked List Simulator";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Circular Linked List Simulator</h1>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Operations</h5>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="operationSelect">Operation:</label>
                        <select class="form-control" id="operationSelect">
                            <option value="">Select an operation</option>
                            <option value="insert">Insert</option>
                            <option value="delete">Delete</option>
                            <option value="utilities">Utilities</option>
                        </select>
                    </div>

                    <div class="form-group" id="subOperationGroup" style="display: none;">
                        <label for="subOperationSelect">Sub Operation:</label>
                        <select class="form-control" id="subOperationSelect">
                            <option value="">Select sub-operation</option>
                        </select>
                    </div>

                    <div class="form-group" id="dataGroup" style="display: none;">
                        <label for="dataInput">Data:</label>
                        <input type="text" class="form-control" id="dataInput" placeholder="Enter data">
                    </div>

                    <div class="form-group" id="indexGroup" style="display: none;">
                        <label for="indexInput">Index (0-based):</label>
                        <input type="number" class="form-control" id="indexInput" placeholder="Enter index" min="0">
                    </div>

                    <button id="executeBtn" class="btn btn-success mt-3" disabled>Execute</button>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Visualization</h5>
                </div>
                <div class="card-body" style="position: relative;">
                    <div id="linkedListContainer" class="d-flex flex-wrap justify-content-center align-items-center">
                        <div class="empty-state">
                            <i class="bi bi-list"></i>
                            <p>The list is currently empty</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <!-- Custom JS -->
    <script src="~/js/site.js"></script>
}